@page
@model InventoryManagementSystem.Pages.Products.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>

<form method="post">
    <h3>Are you sure you want to delete this product?</h3>
    <input type="hidden" asp-for="Product!.Id" />
    <div>
        <button type="submit" class="btn btn-danger">Yes</button>
        <a asp-page="/Products/Index" class="btn btn-secondary">No</a>
    </div>
</form>

<div>
    <h4>Product</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Product?.Name
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Product?.Description
        </dd>
        <dt class="col-sm-2">
            Quantity
        </dt>
        <dd class="col-sm-10">
            @Model.Product?.Quantity
        </dd>
        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Model.Product?.Price
        </dd>
    </dl>
</
