@page "{id:int}"
@model InventoryManagementSystem.Pages.Sales.DeleteSaleModel

@{
    ViewData["Title"] = "Delete Sale";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this sale?</h3>

<div>
    <h4>Sale</h4>
    <dl class="row">
        <dt class="col-sm-2">
            Date
        </dt>
        <dd class="col-sm-10">
            @Model.Sale?.Date.ToString("d")
        </dd>
        <dt class="col-sm-2">
            Product
        </dt>
        <dd class="col-sm-10">
            @Model.Sale?.Product?.Name
        </dd>
        <dt class="col-sm-2">
            Quantity
        </dt>
        <dd class="col-sm-10">
            @Model.Sale?.Quantity
        </dd>
        <dt class="col-sm-2">
            Total Amount
        </dt>
        <dd class="col-sm-10">
            @Model.Sale?.TotalAmount.ToString("KSh #,0")
        </dd>
    </dl>
</div>

<form method="post">
    <input type="hidden" asp-for="Sale!.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./SalesHistory" class="btn btn-secondary">Cancel</a>
</form>
